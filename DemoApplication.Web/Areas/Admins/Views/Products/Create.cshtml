@using DemoApplication.Service.Dtos.Products;
@model ProductCreateDto

<div class="card w-500px h-630px mt-10 mb-15" style="margin-left:auto; margin-right:auto;">
    <div class="py-10 pe-10 px-10">
        <form asp-controller="products" enctype="multipart/form-data" asp-action="Create" method="post">
            <label class="form-label fs-2 text-dark" style="">Product Create</label>
            <div class="mt-5">
                <label class="required form-label text-dark">TITLE</label>
                <input type="text" asp-for=Title class="form-control form-control-solid" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mt-5">
                <label class="required form-label text-dark">QUANTITY</label>
                <input type="number" asp-for=Quantity class="form-control form-control-solid" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="mt-5">
                <label class="required form-label text-dark">PRICE</label>
                <input type="number" asp-for=Price class="form-control form-control-solid" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="mt-13">
                <input type="submit" class="btn btn-primary rounded hover-scale" style="width:100%;" value="CREATE" />
            </div>
            <div class="mt-5 mb-8">
                <a class="btn btn-secondary" asp-area="Admins" asp-controller="Products" asp-action="Index" style="width:100%">
                    CLOSE
                </a>
            </div>
        </form>
    </div>
</div>