@using DemoApplication.Service.Dtos.Accounts;
@model AccountRegisterDto
@{
    Layout = "_AccountLayout.cshtml";
}

<div class="card w-500px h-630px mt-10 mb-10" style="border: 2px solid rgba(255,255,255,0.1); backdrop-filter: blur(15px); margin-left:auto; margin-right:auto; background-color: rgba(255,255,255,0.13); box-shadow: 0 0 40px rgba(8,7,16,0.6);">
    <div class="py-10 pe-10 px-10">
        <form asp-controller="accounts" asp-action="Register" method="post">
            <label class="form-label fs-2" style="">Sign Up</label>
            <div class="mt-5">
                <label class="required form-label">Full Name</label>
                <input type="text" asp-for=FullName class="form-control form-control-solid" style="backdrop-filter: blur(1px); background-color: rgba(255,255,255,0.13)" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="mt-5">
                <label class="required form-label">Birth Date</label>
                <input type="date" asp-for=BirthDate class="form-control form-control-solid" placeholder="+998yyxxxxxxx" style="backdrop-filter: blur(1px); background-color: rgba(255,255,255,0.13)" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="mt-5">
                <label class="required form-label">User Name</label>
                <input type="text" asp-for=UserName class="form-control form-control-solid" style="backdrop-filter: blur(1px); background-color: rgba(255,255,255,0.13)" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="mt-5">
                <label class="required form-label">Password</label>
                <input type="password" asp-for=Password class="form-control form-control-solid" style="backdrop-filter: blur(1px); background-color: rgba(255,255,255,0.13)" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-check form-check-custom form-check-solid mt-5 ">
                <input class="form-check-input" type="checkbox" value="" />
                <label class="form-check-label" for="flexCheckDefault" style="color: #ffffff">
                    I <a href="www.google.com">agree</a> to the terms of use!
                </label>
            </div>
            <div class="mt-8">
                <input type="submit" class="btn btn-primary rounded hover-scale" style="width:100%;" value="SIGN UP" />
            </div>
            <div class="mt-8 mb-10">
                <a class="btn btn-secondary" style="width:100%;" asp-controller="accounts" asp-action="login">
                    SIGN IN
                </a>
            </div>
        </form>
    </div>
</div>