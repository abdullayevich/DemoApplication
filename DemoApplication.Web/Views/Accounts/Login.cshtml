@using DemoApplication.Service.Dtos.Accounts;
@model AccountLoginDto
@{
    Layout = "_AccountLayout.cshtml";
}

<div class="card w-500px h-470px mt-20 mb-100" style="backdrop-filter: blur(15px);  background-color: rgba(255,255,255,0.13); margin-left:auto; margin-right:auto; box-shadow: 0 0 40px rgba(8,7,16,0.6);">
    <div class="py-10 pe-10 px-10">
        <form asp-controller="accounts" asp-action="Login" method="post">
            <label class="form-label fs-2">Sign In</label>
            <div class="form__inputBox mt-5 ">
                <label class="required form-label">User Name</label>
                <input type="text" asp-for=UserName class="form-control form-control-solid" style="backdrop-filter: blur(1px); background-color: rgba(255,255,255,0.13)" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form__inputBox mt-5 ">
                <label class="required form-label">Password</label>
                <input type="password" asp-for=Password class="form-control form-control-solid" style="backdrop-filter: blur(1px); background-color: rgba(255,255,255,0.13)" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mt-20">
                <input type="submit" class="btn btn-primary" style="width:100%;" value="SIGN IN" />
            </div>
            <div class="mt-8 mb-10 ">
                <a class="btn btn-secondary" style="width:100%;" asp-controller="accounts" asp-action="register">
                    SIGN UP
                </a>
            </div>
        </form>
    </div>
</div>